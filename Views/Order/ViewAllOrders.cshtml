@model IEnumerable<ABC_Retail_CloudPoe.Models.Order>

<h2>All Orders</h2>

<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Total Amount</th>
            <th>Payment Method</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CustomerId</td>
                <td>@order.TotalAmount</td>
                <td>@order.PaymentMethod</td>
                <td>
                    <a asp-action="ViewOrder" asp-route-id="@order.Id">View</a> |
                    <a asp-action="DeleteOrder" asp-route-id="@order.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button onclick="history.back()">Back</button>
