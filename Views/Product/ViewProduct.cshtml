@model ABC_Retail_CloudPoe.Models.Product

<h2>Product Details</h2>

<form asp-action="EditProduct" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Name:</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Price:</label>
        <input asp-for="Price" />
    </div>
    <div>
        <label>Image URL:</label>
        <input asp-for="ImageUrl" />
    </div>
    <div>
        <button type="submit">Save Changes</button>
    </div>
</form>

<img src="@Model.ImageUrl" alt="Product Image" width="200" />

<button onclick="history.back()">Back</button>

